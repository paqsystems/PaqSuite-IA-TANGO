APP_NAME=PaqSuite-IA-ERP
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# URL del frontend (para enlaces en correos, ej. recuperación de contraseña)
FRONTEND_URL=http://localhost:3000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración SQL Server
DB_CONNECTION=sqlsrv
DB_HOST=192.168.41.2
DB_PORT=1433
DB_DATABASE=paqsuite_ia_erp
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Correo: para que el usuario reciba el mail de recuperación de contraseña:
# - Desarrollo sin SMTP: MAIL_MAILER=log (los correos se escriben en storage/logs/laravel.log)
# - Desarrollo con Mailpit: MAIL_MAILER=smtp, MAIL_HOST=mailpit, MAIL_PORT=1025 (levantar Mailpit: docker run -p 8025:8025 -p 1025:1025 axllent/mailpit)
# - Producción: configurar SMTP real (Gmail, SendGrid, etc.) con MAIL_HOST, MAIL_USERNAME, MAIL_PASSWORD
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# OpenAPI/Swagger: true = regenerar api-docs.json en cada visita a /api/documentation (solo desarrollo)
L5_SWAGGER_GENERATE_ALWAYS=false
